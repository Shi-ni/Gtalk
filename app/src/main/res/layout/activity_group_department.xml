<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".groupDepartment">

    <TextView

        android:id="@+id/select_link"
        android:layout_above="@+id/dept_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Select your department"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColorHint="@color/colorPrimaryDark"
        />


    <RelativeLayout
        android:id="@+id/dept_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        >



    <Button
        android:id="@+id/cse_button"
        android:layout_below="@+id/select_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C.S.E/I.T"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:padding="4dp"
        android:textSize="24dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"

        />
    <Button
        android:id="@+id/mech_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MECH."
        android:layout_below="@id/cse_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:padding="4dp"
        android:textSize="24dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"

        />
    <Button
        android:id="@+id/ec_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E.C/E.X"
        android:layout_below="@id/mech_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:padding="4dp"
        android:textSize="24dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"

        />
    <Button
        android:id="@+id/elect_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ELECTRICAL"
        android:layout_below="@id/ec_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:padding="4dp"
        android:textSize="24dp"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"

        />
    </RelativeLayout>
</RelativeLayout>